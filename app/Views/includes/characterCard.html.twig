<div class="flex flex-row basis-2/5 items-center rounded-lg shadow-md shadow-gray-500 md:h-52 md:flex-row md:max-w-xl bg-gray-800">
    <img class="object-cover w-full rounded-t-lg h-96 md:h-52 md:w-52 md:rounded-none md:rounded-l-lg"
         src="{{ character.image }}"
         alt=""/>
    <div class="flex flex-col justify-between p-4 leading-normal">
        <form action="/character" method="GET">
            <button type="submit" name="characterId" value="{{ character.id }}"
                    class="text-2xl font-bold text-left tracking-tight text-white hover:text-yellow-500">
                {{ character.name }}
            </button>
        </form>
        <div class="flex items-center pb-2 font-bold text-sm text-white">
            {% if character.status == 'Alive' %}
                <div class="h-2.5 w-2.5 rounded-full bg-green-500 mr-2"></div>
            {% elseif character.status == 'Dead' %}
                <div class="h-2.5 w-2.5 rounded-full bg-red-500 mr-2"></div>
            {% elseif character.status == 'unknown' %}
                <div class="h-2.5 w-2.5 rounded-full bg-gray-500 mr-2"></div>
            {% endif %}
            {{ character.status }} - {{ character.species }}
        </div>
        <p class="font-normal text-sm text-gray-400">
            Last known location:
        </p>
        <form action="/location" method="GET">
            <button type="submit" name="locationId" value="{{ character.location.id }}"
                    class="mb-3 font-normal text-base text-white hover:text-yellow-500">
                {{ character.location.name }}
            </button>
        </form>
        <p class="font-normal text-sm text-gray-400">
            First seen in:
        </p>
        <form action="/episode" method="GET">
            <button type="submit" name="episodeId" value="{{ character.firstEpisode.id }}"
                    class="mb-3 font-normal text-base text-white hover:text-yellow-500">
                {{ character.firstEpisode.name }}
            </button>
        </form>
    </div>
</div>