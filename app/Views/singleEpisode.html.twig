{% extends 'base.html.twig' %}

{% block content %}
    <div class="flex flex-wrap gap-4 justify-center pt-8">
        <div class="grid grid-cols-1">
            <h2 class="pt-4 text-4xl font-bold tracking-tight text-white text-center">
                {{ episode.name }}
            </h2>
            <p class="pb-4 font-bold text-lg text-white text-center">
                (Season {{ episode.seasonId[2:1] }}, episode {{ episode.seasonId[4:] }})
            </p>
            <p class="text-lg text-white text-center">
                Episode ID: {{ episode.id }}
                <br>
                Air date: {{ episode.airDate }}
            </p>
            <h2 class="py-4 text-2xl font-bold tracking-tight text-white text-center">
                Characters ({{ episode.characterIds|length }})
            </h2>
        </div>
    </div>
    <div class="flex flex-wrap gap-4 justify-center pt-2">
        {% for character in characters %}

            {% include 'includes/characterCard.html.twig' %}

        {% endfor %}
    </div>
{% endblock %}